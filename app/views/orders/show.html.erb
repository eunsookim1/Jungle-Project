<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <tr>
    <div class="panel panel-default items">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Image</th>
            <th>Product</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Line Item Total</th>

          </tr>
        </thead>
        <tbody>
          <% @order.line_items.each do |item| %>
            <tr>
              <td>
                <%= image_tag item.product.image.thumb.url, alt: item.product.name, class: 'product-image' %>
              </td>
              <td><%= item.product.name %></td>
              <td><%= item.product.description %></td>
              <td><%= item.quantity %></td>
              <td><%= humanized_money_with_symbol(item.total_price) %></td>
            </tr>
          <% end %>
        </tbody>
        <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <%= humanized_money_with_symbol (@order.total_cents / 100.00) %>
          </th>
        </tr>
      </tfoot>
        </table>
    </div>
  </tr>
  <br>
  <div class="order-summary jumbotron">
  <p>Order emailed to: <%= @order.email %></p>
  <p>Total Amount: <%= humanized_money_with_symbol (@order.total_cents / 100.00) %></p>
  <br>
  <h4>Thank you for your order!</h4>
  <br>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
